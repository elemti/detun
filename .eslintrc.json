{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:import/warnings"],
    "globals": {
        "Atomics": "readonly",
        "Deno": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "import/extensions": ["warn", "ignorePackages"],
        "no-empty": "off",
        "no-constant-condition": "off"
    }
}
